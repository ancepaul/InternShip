<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_user_layout_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_account"
        android:tint="@color/colorPrimary"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/single_user_layout_name"
        android:layout_toEndOf="@id/single_user_layout_image"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="15"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/single_user_layout_image" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_below="@id/single_user_layout_image"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#cdcdcd">

    </LinearLayout>

</RelativeLayout>

</RelativeLayout>